{
  "schemaVersion": 1,
  "id": "webstreamer",
  "version": "${version}",

  "name": "WebStreamer",
  "description": "A mod that let you display web streaming in HLS format. Currently supporting raw HLS and Twitch.",
  "authors": [
    "Theo Rozier (Mindstorm38)"
  ],
  "contact": {
    "homepage": "https://github.com/mindstorm38/fabric-webstreamer",
    "sources": "https://github.com/mindstorm38/fabric-webstreamer"
  },

  "license": "LGPL-3.0",
  "icon": "assets/webstreamer/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "fr.theorozier.webstreamer.WebStreamerMod"
    ],
    "client": [
      "fr.theorozier.webstreamer.WebStreamerClientMod"
    ]
  },
  "mixins": [
    "webstreamer.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.6",
    "fabric": "*",
    "minecraft": "1.20.x",
    "java": ">=17"
  },
  "suggests": {}
}
